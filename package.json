{
  "name": "house-proximity-server",
  "version": "1.0.0",
  "main": "app.js",
  "author": "Manzi Fabrice",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec babel-node ./src/app.js",
    "drop_tables": "sequelize db:migrate:undo:all",
    "create_tables": "sequelize db:migrate && sequelize db:seed:all",
    "start": "node build/app.js",
    "build": "yarn create_tables && babel src --out-dir build",
    "test": "cross-env NODE_ENV=test jest --coverage --forceExit"
  },
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/node": "^7.16.8",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "babel-jest": "^27.5.1",
    "cross-env": "^7.0.3",
    "jest": "^27.5.1",
    "supertest": "^6.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
